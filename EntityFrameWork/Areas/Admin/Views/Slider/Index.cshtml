@model  IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}


<div class="Container my-5">
    <h1>Slider</h1>

                      
                  <a class="btn btn-success" asp-action="Create" style="float:right;">Create</a>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Image
                          </th>
                          <th>
                            Status
                          </th>
                          <th>
                            Operations
                          </th>
                      
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                          {
                              <tr>
                          <td class="py-1">
                            <img src="~/img/@item.Image" style="width:70px; height:70px" alt="image"/>
                          </td>
                          <td>
                            @if (item.SoftDelete)
                            {
                                <div class="deActive-status"></div>
                            }else{

                                 <div class="active-status"></div>
                            }
                            
                          </td>
                          <td>
                           <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">Info</a>
                           <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-danger">Delete</a>
                          </td>
                         
                        </tr> 
                          }

                       
                        
                      </tbody>
                    </table>
                  </div>
</div>

